function ccdproc_splitsec,str

; This function splits an IRAF sector
; string like [1:1024,1:4096] into a 4-element
; integer array

if n_elements(str) eq 0 then return,-1

len = strlen(str)
str2 = strmid(str,1,len-2)
dum = strsplit(str2,',',/extract)
str_x = long(strsplit(dum[0],':',/extract))
str_y = long(strsplit(dum[1],':',/extract))
out = [str_x,str_y]

return,out

end
